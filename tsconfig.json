{
  "compilerOptions": {
    "target": "es2017",                     // ✅ Modern JS features
    "module": "commonjs",
    "rootDir": "./src",                     // ✅ your .ts source files
    "outDir": "./dist",                     // ✅ compiled JS output
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],               // ✅ fixes Object.values and process
    "resolveJsonModule": true
  }
}
